# External Service URLs
AUTH_URL=https://your-auth-service.com
AUTH_USERNAME=your-username
AUTH_PASSWORD=your-password
SPLIT_URL=https://your-audio-split-service.com
TRANSCRIPTION_URL=https://your-transcription-service.com

# Sentiment Analysis Service
# NOTE: The sentiment service is now integrated in docker-compose.yml
# It runs at http://sentiment-api:8008 internally (no external config needed)
# For development/external use, the service is exposed on port 8008
SENTIMENT_URL=http://sentiment-api:8008

# API Security
API_KEY=your-secure-api-key-change-in-production

# Redis Security
REDIS_PASSWORD=your-secure-redis-password-change-in-production

# Notification Service Configuration
# Email Notifications (Hostinger SMTP)
ENABLE_EMAIL=true
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USERNAME=your-email@yourdomain.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=your-email@yourdomain.com
SMTP_FROM_NAME=Audio Processing System
SMTP_USE_TLS=true
NOTIFICATION_EMAILS=admin@yourdomain.com,dev@yourdomain.com

# Webhook Notifications
ENABLE_WEBHOOK=false
WEBHOOK_URL=https://your-webhook-endpoint.com/notifications
WEBHOOK_SECRET=your-webhook-secret

# Slack Notifications
ENABLE_SLACK=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Notification Triggers
NOTIFY_ON_JOB_FAILURE=true
NOTIFY_ON_JOB_SUCCESS=false
NOTIFY_ON_TASK_FAILURE=true
NOTIFY_ON_SYSTEM_ERROR=true

# Notification Retry Settings
NOTIFICATION_MAX_RETRIES=3
NOTIFICATION_RETRY_DELAY=5
