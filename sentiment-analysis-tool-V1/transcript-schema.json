{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Transcript Schema",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Optional metadata object with any fields",
      "additionalProperties": true
    },
    "text": {
      "type": "string",
      "description": "Full transcript text"
    },
    "segments": {
      "type": "array",
      "description": "List of transcript segments",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "start": { "type": "number" },
          "end": { "type": "number" },
          "text": { "type": "string" }
        },
        "required": ["id", "start", "end", "text"],
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "required": ["text", "segments"],
  "additionalProperties": true
}
